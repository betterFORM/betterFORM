<root>
    <properties>
        <javac>
            <deprecation>off</deprecation>
            <debug>on</debug>
            <optimize>on</optimize>
            <!-- TODO: to be implemented in all javac tasks -->
            <version>1.6</version>
        </javac>
    </properties>
    <server>
        <app>
            <name>betterform</name>
            <version>1.2</version>
        </app>
        <compile>
            <classpath pathid="compile.class.path" description="classpath for compiling core classes">
                <pathelement path="${basedir}/target/classes"/>
                <pathelement location="${basedir}/src/main/lib/ant-1.6.5.jar" />
                <pathelement location="${basedir}/src/main/lib/BrowserLauncher2.jar" />
                <pathelement location="${basedir}/src/main/lib/jetty.jar" />
                <pathelement location="${basedir}/src/main/lib/jetty-util.jar" />
                <pathelement location="${basedir}/src/main/lib/jsp-2.1-6.0.2.jar" />
                <pathelement location="${basedir}/src/main/lib/jsp-api-2.1.jar" />
                <pathelement location="${basedir}/src/main/lib/commons-jxpath-1.2.jar" />
                <pathelement location="${basedir}/src/main/lib/servlet-api-2.5.jar" />
            </classpath>
        </compile>
    </server>
</root>

